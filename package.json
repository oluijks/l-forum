{
	"name": "l-forum",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:sqlite:up": "drizzle-kit up --config=drizzle.config.sqlite.ts",
		"db:sqlite:push": "drizzle-kit push --config=drizzle.config.sqlite.ts",
		"db:sqlite:check": "drizzle-kit check --config=drizzle.config.sqlite.ts",
		"db:sqlite:migrate": "drizzle-kit migrate --config=drizzle.config.sqlite.ts",
		"db:sqlite:generate": "drizzle-kit generate --config=drizzle.config.sqlite.ts",
		"db:sqlite:studio": "drizzle-kit studio --config=drizzle.config.sqlite.ts --host 127.0.0.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/better-sqlite3": "^7.6.11",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"drizzle-kit": "^0.28.1",
		"eslint": "9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"better-sqlite3": "^11.5.0",
		"drizzle-orm": "^0.36.3"
	}
}
